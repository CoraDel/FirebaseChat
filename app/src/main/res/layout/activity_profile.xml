<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.wcs.firebasechat.ProfileActivity"
    android:background="@color/colorBlack">

    <ImageView
        android:id="@+id/imageView_profile"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="29dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/defaultimageuser" />

    <TextView
        android:id="@+id/text_profil_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        tools:text="Display Name" />

    <TextView
        android:id="@+id/tv_current_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_profil_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:textColor="@android:color/white"
        tools:text="Current Status" />

    <TextView
        android:id="@+id/tv_total_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_friend_request"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:textColor="@android:color/white"
        tools:text="Total friends" />

    <Button
        android:id="@+id/btn_friend_request"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_decline_request"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@android:color/holo_red_dark"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="send friend request"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_decline_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:background="@android:color/holo_red_dark"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="decline friend request"
        android:textColor="@android:color/white" />

</RelativeLayout>
